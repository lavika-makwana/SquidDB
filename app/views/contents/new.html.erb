<div>
  <h2>Create a Content</h2>

  <%= form_for(@content) do |form| %>
    <table summary="content form fields">
      <tr>
        <th>Type</th>
        <td><%=   form.select(:types, Content.content_types_list + ['Add a new type'], {:include_blank => 'Please select a type', class: "type"}) %></td>
      </tr>
      <tr>
        <th>Type</th>
        <td><%= form.text_field :types, required: true %> </td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= form.text_field :name, required: true %> </td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= form.text_field :description %></td>
      </tr>
      <tr>
        <th>Certificate</th>
        <td><%= form.text_field :certificate %></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%= form.text_field :genre %></td>
      </tr>
      <tr>
        <th>Has Seasons</th>
        <td><%= form.check_box :with_seasons %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= form.submit('Create content') %>
    </div>
  <% end %>
</div>